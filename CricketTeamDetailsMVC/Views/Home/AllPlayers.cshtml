@{
    //Layout = "~/Views/Shared/_testLayout.cshtml"; //To specify custom layout
}
@model List<SpResult>
@{
    <div class="container-md mx-3 my-3">
        <button class="btn btn-outline-dark">Add New</button>
    </div>
    <div class="container-md mx-3 my-3">
    <table class="table">
        <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Role</th>
        <th>Height</th>
        <th>Salary</th>
        <th>Locality</th>
        <th>EDIT</th>
        </thead>
        @foreach (var p in Model)
        {
            <tbody>
                <tr>
                    <td>@p.PlayerId</td>
                    <td>@p.PlayerName</td>
                    <td>@p.PlayerRole</td>
                    <td>@p.PlayerHeight</td>
                    <td>@p.PlayerSalary</td>
                    <td>@p.PlayerLocality</td>
                    <td>
                        <button class="btn btn-sm">Test</button>
                    </td>
                </tr>
            </tbody>
        }
    </table>
    </div>
}
